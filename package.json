{
  "name": "ms-teams-wrapper",
  "version": "1.0.0",
  "description": "A javascript library to send messages to Microsoft Teams webhooks.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:clear-cache": "jest --clearCache"
  },
  "keywords": [
    "microsoft",
    "teams",
    "wrapper",
    "webhooks"
  ],
  "author": "Adam Riaz",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "axios-mock-adapter": "^1.21.5",
    "jest": "^29.5.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html",
      "text"
    ],
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!**/node_modules/**",
      "!**/demo/**",
      "!**/dist/**",
      "!**/index.{js,ts}",
      "!**/coverage/**"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
