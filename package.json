{
  "name": "ms-teams-wrapper",
  "version": "1.0.1",
  "description": "A node library to send messages to Microsoft Teams webhooks.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./types": "./dist/types/index.js"
  },
  "typesVersions": {
    "*": {
      "types": [
        "./dist/types/index.d.ts"
      ]
    }
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:clear-cache": "jest --clearCache",
    "docs": "npx typedoc",
    "docs:generate": "npx typedoc --out docs",
    "docs:watch": "npx typedoc --watch"
  },
  "keywords": [
    "microsoft",
    "teams",
    "wrapper",
    "webhooks"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamriaz/ms-teams-wrapper"
  },
  "bugs": {
    "url": "https://github.com/adamriaz/ms-teams-wrapper/issues"
  },
  "homepage": "https://github.com/adamriaz/ms-teams-wrapper#readme",
  "author": "Adam Riaz",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "axios-mock-adapter": "^1.21.5",
    "eslint": "^8.44.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html",
      "text"
    ],
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!**/node_modules/**",
      "!**/demo/**",
      "!**/dist/**",
      "!**/index.{js,ts}",
      "!**/coverage/**",
      "!**/docs/**"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=14.21.3"
  }
}
